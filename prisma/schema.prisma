  generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name String
  no_telp String
  hashedPassword String
  role String @default("Customer")
  keranjang Keranjang?
  Transaksi Transaksi[]
}

model Pakaian {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  price Int
  unit String
  orderlines Orderline[]
}

model Transaksi{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nama String
  total_harga Int
  status String @default("Not Confirmed")
  tanggal String
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  orderlines Orderline[]
}

model Orderline{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  kuantitas Int
  total_harga Int
  noted String
  pakaian Pakaian @relation(fields: [pakaianId], references: [id])
  pakaianId String @db.ObjectId 
  transaksi Transaksi? @relation(fields: [transaksiId], references: [id])
  transaksiId String? @db.ObjectId
  keranjang Keranjang? @relation(fields: [keranjangId], references: [id])
  keranjangId String? @db.ObjectId
}

model Keranjang{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  orderlines Orderline[]
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId @unique
}

